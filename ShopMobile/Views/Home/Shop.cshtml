
@{
    ViewData["Title"] = "Shop";
    Layout = "~/Views/Shared/PageLayout.cshtml";
}


@model IEnumerable< Product >

<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="index.html">Home</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Shop</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">

        <div class="row mb-5">
            <div class="col-md-9 order-2">

                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4"><h2 class="text-black h5">Shop All</h2></div>
                        <div class="d-flex">
                           
                        </div>
                    </div>
                </div>
               <div class="box-content">
                    <div class="row mb-5 list_proudcts">

                        @foreach (Product p in Model)
                        {
                            <div class="col-sm-6 col-lg-4 mb-4" data-aos="fade-up">
                                <div class="block-4 text-center border">
                                    <figure class="block-4-image">
                                        <a asp-controller="Home" asp-action="ShopSingle" asp-route-id="@p.ProductId"><img src="@p.images" alt="Image placeholder" class="img-fluid"></a>
                                    </figure>
                                    <div class="block-4-text p-4">
                                        <h3><a href="shop-single.html">@p.title</a></h3>
                                        <p class="mb-0">Finding perfect t-shirt</p>
                                        <a asp-controller="Home" asp-action="ShopSingle" asp-route-id="@p.ProductId" class=" btn btn-primary text-white mt-3 w-50 font-weight-bold mt">$ @p.price</a>
                                    </div>
                                </div>
                            </div>
                        }






                    </div>
                    <div class="row" data-aos="fade-up">
                        <div class="col-md-12 text-center">
                            <div class="site-block-27">
                                <ul class="wrap-page-navigation">
                                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                                    {
                                        if (i == 1)
                                        {
                                            <li style="cursor: pointer" data-page="@i" class="active" id="page-navigation"><span data-page="@i">@i</span></li>
                                        }
                                        else
                                        {
                                            <li style="cursor: pointer" data-page="@i" c id="page-navigation"><span data-page="@i">@i</span></li>
                                        }
                                    }


                                </ul>
                            </div>
                        </div>
                    </div>
               </div>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <ul class="list-unstyled mb-0">
                        <li id="cagtegory_btn" data-categoryid="0" style="cursor: pointer" class="mb-1">
                            <a href="#" class="d-flex">
                                <span>All</span>
                                <span class="text-black ml-auto">@ViewBag.TotoalCountProduct</span>
                            </a>
                        </li>
                        @foreach (var c in ViewBag.CategoryDataList)
                        {
                            <li href="#@c.CategoryId" id="cagtegory_btn" data-categoryid="@c.CategoryId" style="cursor: pointer" class="mb-1">
                                <a href="#@c.CategoryId" class="d-flex">
                                    <span>@c.CategoryName</span>
                                    <span class="text-black ml-auto">@c.ProductCount</span>
                                </a>
                            </li>
                        }

                       
                    </ul>
                </div>

                <div class="border p-4 rounded mb-4">
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Filter by Price</h3>
                        <div id="slider-range" class="border-primary"></div>
                        <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white" disabled="" />
                    </div>

                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Color</h3>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-danger color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Red (2,429)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-success color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Green (2,298)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-info color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Blue (1,075)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center">
                            <span class="bg-primary color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Purple (1,075)</span>
                        </a>
                    </div>

                </div>
            </div>
        </div>

      

    </div>
</div>




@section Scripts {
    <script>
        $(document).ready(function () {
            $('body').on('click', '#cagtegory_btn', function () {
                const categoryId = $(this).data("categoryid")
                if (categoryId == "0") {
                    $.ajax({
                        url: '/Home/GetAllProductByCategory',
                        data: {  },
                        success: function (response) {

                            $('.box-content').html(response);

                        },
                        error: function (e) {
                            console.log(e);
                        }
                    })
                }
                else {
                    $.ajax({
                        url: '/Home/GetAllProductByCategory',
                        data: { categoryId: parseInt(categoryId) },
                        success: function (response) {

                            $('.box-content').html(response);

                        },
                        error: function (e) {
                            console.log(e);
                        }
                    })
                }
                   
                
            })

            

            $('body').on('click', '#page-navigation', function () {
                const page = $(this).data("page");
                const currentURL = window.location.href;
                const categoryId = window.location.hash.substring(1);
                $(".wrap-page-navigation active").removeClass('active')
                $(this).addClass('active')
                if(!categoryId.trim()) {
                    $.ajax({
                        url: '/Home/GetAllProductByCategory',
                        data: { page: parseInt(page) },
                        success: function (response) {

                            $('.box-content').html(response);
                        },
                        error: function (e) {
                            console.log(e);
                        }
                    })
                } else {
                    $.ajax({
                        url: '/Home/GetAllProductByCategory',
                        data: { categoryId: parseInt(categoryId), page: parseInt(page) },
                        success: function (response) {

                            $('.box-content').html(response);
                        },
                        error: function (e) {
                            console.log(e);
                        }
                    })
                }
                

            })
            var currentURL = window.location.href;


            if (currentURL.indexOf("#") !== -1) {
    
                var newURL = currentURL.split("#")[0];

                window.location.href = newURL;
            }


            
        })
    </script>

    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.magnific-popup.min.js"></script>
    <script src="~/js/aos.js"></script>
    <script src="~/js/main.js"></script>
 }



